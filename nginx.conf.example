# Nginx Configuration for Production
# Copy this to your Nginx sites-available directory and modify as needed

server {
    listen 80;
    listen [::]:80;
    server_name crime.alertaraqc.com www.crime.alertaraqc.com;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name crime.alertaraqc.com www.crime.alertaraqc.com;

    # SSL Configuration (update paths)
    ssl_certificate /path/to/ssl/certificate.crt;
    ssl_certificate_key /path/to/ssl/private.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Document root
    root /var/www/crime-analytics;
    index index.php index.html;

    # Access and error logs
    access_log /var/log/nginx/crime-analytics-access.log;
    error_log /var/log/nginx/crime-analytics-error.log;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Disable access to sensitive files
    location ~ /\.(?!well-known).* {
        deny all;
    }

    location ~ /\.env {
        deny all;
    }

    location ~ /\.git {
        deny all;
    }

    location /vendor {
        deny all;
    }

    # Main location block - Clean URL handling
    location / {
        try_files $uri $uri/ $uri.php?$query_string;
    }

    # Handle PHP files
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;  # Adjust PHP version as needed
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;

        # PHP settings
        fastcgi_read_timeout 300;
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;
    }

    # API routes
    location /api/ {
        try_files $uri $uri/ $uri.php?$query_string;
    }

    # Frontend routes
    location /frontend/ {
        try_files $uri $uri/ $uri.php?$query_string;
    }

    # Static assets caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Deny access to .php files in uploads directory
    location ~* /uploads/.*\.php$ {
        deny all;
    }

    # File upload limits
    client_max_body_size 10M;
    client_body_timeout 300s;
}
